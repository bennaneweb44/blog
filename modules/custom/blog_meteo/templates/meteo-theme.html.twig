<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="weather"> 
                {{ form_aturocomplete_villes }}  
            </div>
            <div class="weather">     

                <div class="bg-warning text-center day villeTitre" id="villeTitre">
                    <span>{{ city }}</span>   
                </div> 
                               
                <div class="current">
                    <div class="info">
                        <div>&nbsp;</div>      
                        <div id="villeDescriptif" class="city">{{ descriptif }}</div>          
                        <div id="villeTemperature" class="temp">{{ temperature }}&deg; <small>C</small></div>
                        <div id="villeVent" class="wind">{{ vent }} km/h</div>
                        <div>&nbsp;</div>
                    </div>
                    <div class="icon">
                        <span id="villeIcone" class="wi-day-sunny">
                            <img src="{{ icon }}" height="110" />
                        </span>
                    </div>
                </div>
                {% if boutonsAfficher |length > 0 %}
                    <div class="future" id="div-periodes">
                        
                        {% if 'actuelle' in boutonsAfficher %}
                            <div class="day bg-warning moment-actif" data-periode="actuelle">
                                <h3>Actuelle</h3>
                                <p><span class="wi-day-cloudy"></span></p>
                            </div>
                        {% endif %}

                        {% if 'matin' in boutonsAfficher %}
                            <div class="day bg-warning" data-periode="matin">
                                <h3>Matin</h3>
                                <p><span class="wi-day-cloudy"></span></p>
                            </div>
                        {% endif %}

                        {% if 'apres-midi' in boutonsAfficher %}
                            <div class="day bg-warning" data-periode="apres-midi">
                                <h3>Après-midi</h3>
                                <p><span class="wi-showers"></span></p>
                            </div>
                        {% endif %}

                        {% if 'soir' in boutonsAfficher %}
                            <div class="day bg-warning" data-periode="soir">
                                <h3>Soir</h3>
                                <p><span class="wi-rain"></span></p>
                            </div>
                        {% endif %}
                    </div>
                {% endif %}
            </div>    
        </div>        
    </div>
    <div class="row meteo_4_jours">
        <div class="col-md-12 text-center" style="margin: 20px 0">
            <h2>Pour les 4 prochains jours</h2>
        </div>
        <div class="col-md-12">

            {% if weather4days is defined and weather4days |length %}
                {% set ind = 0 %}
                {% for wheather in weather4days %}

                    <div class="col-md-3 col-xs-12" style="background-color: burlywood; border: 2px solid burlywood; border-left: 2px solid #F9F4D7; border-right: 2px solid #F9F4D7;">

                        <div class="row bg-warning" style="margin: 5px">                    
                            <div class="text-center" >
                                <h6><strong>{{ wheather['date'] }}</strong></h6>                    
                            </div>                    
                        </div>

                        <div class="row bg-warning" style="height: 9.2em; background-color: burlywood; border-bottom: 2px solid #F9F4D7">             
                            <div class="col-md-12">
                                <div class="col-md-7 col-sm-7 col-xs-7 float-left">
                                    <div>&nbsp;</div>              
                                    <strong>Matin</strong>  
                                    <div id="matin_descriptif_{{ind}}" class="city">{{ wheather['matin']['descriptif'] }}</div>          
                                    <div id="matin_temp_vent_{{ind}}" class="temp">{{ wheather['matin']['temperature'] }}&deg; <small>C</small> , {{ wheather['matin']['vent'] }} km/h</div>                        
                                    <div>&nbsp;</div>
                                </div>

                                <div class="col-md-5 col-sm-5 col-xs-5 float-right">
                                    <img id="matin_icone_{{ind}}" src="{{ wheather['matin']['icone'] }}" height="90" />
                                </div>
                            </div>
                        </div>

                        <div class="row bg-warning" style="height: 9.2em; background-color: burlywood; border-bottom: 2px solid #F9F4D7">
                            <div class="col-md-12">
                                <div class="col-md-7villeTitre col-sm-7 col-xs-7 float-left">
                                    <div>&nbsp;</div>              
                                    <strong>Après-midi</strong>  
                                    <div id="aprem_descriptif_{{ind}}" class="city">{{ wheather['apres-midi']['descriptif'] }}</div>          
                                    <div id="aprem_temp_vent_{{ind}}" class="temp">{{ wheather['apres-midi']['temperature'] }}&deg; <small>C</small> , {{ wheather['matin']['vent'] }} km/h</div>                        
                                    <div>&nbsp;</div>
                                </div>

                                <div class="col-md-5 col-sm-5 col-xs-5 float-right">
                                    <img id="aprem_icone_{{ind}}" src="{{ wheather['apres-midi']['icone'] }}" height="90" />
                                </div>
                            </div>
                        </div>

                        <div class="row bg-warning" style="height: 9.2em; background-color: burlywood; border-bottom: 2px solid #F9F4D7">
                            <div class="col-md-12">
                                <div class="col-md-7 col-sm-7 col-xs-7 float-left">
                                    <div>&nbsp;</div>              
                                    <strong>Soir</strong>  
                                    <div id="soir_descriptif_{{ind}}" class="city">{{ wheather['soir']['descriptif'] }}</div>          
                                    <div id="soir_temp_vent_{{ind}}" class="temp">{{ wheather['soir']['temperature'] }}&deg; <small>C</small> , {{ wheather['matin']['vent'] }} km/h</div>                        
                                    <div>&nbsp;</div>
                                </div>

                                <div class="col-md-5 col-sm-5 col-xs-5 float-right">
                                    <img id="soir_icone_{{ind}}" src="{{ wheather['soir']['icone'] }}" height="90" />
                                </div>
                            </div>
                        </div>
                        
                    </div>

                    {% set ind = ind + 1 %}
                {% endfor %}

            {% endif %}
            
        </div>
    </div>
</div>

<style>
    .moment-actif {
        background-color: #F68D2E;
    }
</style>